@{
    ViewBag.Title = "DifferentAnimalsFromKindList";
    
@model  IEnumerable<Animal.Common.Models.Bal.AnimalParticularModel>

}
    <div class ="form-text">
    <h2>Here you can see list of particular animals of this type:</h2>

@*@using (Html.BeginForm("GetAnimalParticularView", "AnimalParticular", "Get"))
{*@
        <table width="90%">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HasCollar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAlive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeartRhythms)
           </th>
            <th>
                @Html.DisplayNameFor(model => model.CaloriesBurned)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.BreathingRate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.LastWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <label>Actions</label>
                </th>
 </tr>
                @foreach (var animalParticular in Model)
                {
                     <tr>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.HasCollar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.IsAlive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.HeartRhythms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.CaloriesBurned)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.BreathingRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.LastWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => animalParticular.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = animalParticular.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = animalParticular.Id })
                    </td>
                </tr>
}
        </table>
        @Html.ActionLink("Add new animal", "GetAnimalParticularAddingView")
    </div>