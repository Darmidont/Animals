@{
    ViewBag.Title = "Registration";
    @model  Animal.Common.Models.Bal.UserModel
}


<h2>Register now at Animal Husbandry. It's free!</h2>


    @using (Html.BeginForm("Register", "Account", "Post"))
    {
        <div class ="registration-form">
        
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName)
            @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "validation" }) 
            <br>
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName)
            @Html.ValidationMessageFor(x => x.LastName)
            <br>
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
            <br>
            @Html.LabelFor(x => x.Login)
            @Html.TextBoxFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
            <br>
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
            <br>
            @Html.LabelFor(x => x.Description)
            @Html.TextBoxFor(x => x.Description)
            @Html.ValidationMessageFor(x => x.Description)
            <br>    
            <button type="submit" class="btn btn-primary btn-large btn-block">Register!</button>
        </div>
    }


