@{
    ViewBag.Title = "Registration";
    @model  Animal.Common.Models.Bal.UserModel
}

    <div class ="form-text">
<h2>Register now at Animal Husbandry. It's free!</h2>
    @using (Html.BeginForm("Register", "Account", "Post"))
    {
        <div class ="change-form">
        
            <p align ="center">
            @Html.LabelFor(x => x.FirstName)
             <br>
            @Html.TextBoxFor(x => x.FirstName)
                <br>
            @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "validation" }) 
            <br>
            @Html.LabelFor(x => x.LastName)
            <br>
            @Html.TextBoxFor(x => x.LastName)
                <br>
            @Html.ValidationMessageFor(x => x.LastName)
            <br>
            @Html.LabelFor(x => x.Email)
            <br>
            @Html.TextBoxFor(x => x.Email)
                <br>
            @Html.ValidationMessageFor(x => x.Email)
            <br>
            @Html.LabelFor(x => x.Login)
            <br>
            @Html.TextBoxFor(x => x.Login)
                <br>
            @Html.ValidationMessageFor(x => x.Login)
            <br>
            @Html.LabelFor(x => x.Password)
            <br>
            @Html.TextBoxFor(x => x.Password)
                <br>
            @Html.ValidationMessageFor(x => x.Password)
            <br>
            @Html.LabelFor(x => x.Description)
            <br>
            @Html.TextBoxFor(x => x.Description)
                <br>
            @Html.ValidationMessageFor(x => x.Description)
                </p>
            <br>    
            <button type="submit" class="btn btn-primary btn-large btn-block">Register!</button>
        </div>
    }

</div>
