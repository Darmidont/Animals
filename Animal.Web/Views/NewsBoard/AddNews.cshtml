@model Animal.Common.Models.Bal.ParticularNewsModel

@{
    ViewBag.Title = "AddNews";
}
<div class ="form-text">
<h2>Add news</h2>

@using (Html.BeginForm("AddNews", "NewsBoard", "Post"))
{

    <div class="change-form">

        @Html.LabelFor(x => x.Message)
        <br>
        @Html.TextBoxFor(x => x.Message)
        @Html.ValidationMessageFor(x => x.Message)
    <br>
    <div class="buttons-actions">
        <div class="go">
            <button type="submit" class="btn btn-primary btn-large btn-block">Add commentary</button>
        </div>
        <div class="cancel">
            <button type="reset" class="btn btn-primary btn-large btn-block">Back</button>
        </div>
    </div>
    </div >
}

    </div>