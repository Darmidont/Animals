    <div class="navbar-header">
    </div>
    <div class="navbar-collapse collapse">

        <ul class="menu-main">
            @if (User.Identity.IsAuthenticated)
          { 
        @Html.ActionLink("Animal Husbandry:Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
