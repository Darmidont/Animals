            }
            else
            {
                @Html.ActionLink("Animal Husbandry:Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Login", "GetAuthorizationView", "Account")</li>
            <li>@Html.ActionLink("Registration", "GetRegistrationView", "Account")</li>
            }
        </ul>
    </div>
</div>


<div class="container body-content">
    @RenderBody()
