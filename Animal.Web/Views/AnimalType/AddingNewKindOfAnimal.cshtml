
@{
    ViewBag.Title = "AddingNewKindOfAnimal";
    @model Animal.Common.Models.Bal.AnimalKindModel

}

    <div class ="form-text">
    <h2>Add new kind of animal</h2>

<h2>Here you can add new kinds of animals that you have</h2>

@using (Html.BeginForm("AddNewAnimalKind", "AnimalType", "Post"))
{
    <div class="change-form">
        <p align ="center">
        @Html.HiddenFor(_ => _.Id)

        @Html.LabelFor(x => x.Name)
            <br>
        @Html.TextBoxFor(x => x.Name)
            <br>
        @Html.ValidationMessageFor(x => x.Name)
        <br>
        @Html.LabelFor(x => x.PlannedNumberOfAnimals)
            <br>
        @Html.TextBoxFor(x => x.PlannedNumberOfAnimals)
            <br>
        @Html.ValidationMessageFor(x => x.PlannedNumberOfAnimals)
        <br>
        @Html.LabelFor(x => x.DescriptionOFAnimals)
            <br>
        @Html.TextBoxFor(x => x.DescriptionOFAnimals)
            <br>
        @Html.ValidationMessageFor(x => x.DescriptionOFAnimals)
            </p>
        <br>
        <button type="submit" class="btn btn-primary btn-large btn-block">Add new</button>
    </div>
}
</div>


